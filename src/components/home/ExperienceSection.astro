---
import { Image } from "astro:assets";

import ExperienceImg1 from "../../assets/img/our-menu-01.jpg";
import ExperienceImg2 from "../../assets/img/our-menu-05.jpg";
import ExperienceImg3 from "../../assets/img/our-menu-13.jpg";
import ExperienceImg4 from "../../assets/img/our-menu-08.jpg";
import ExperienceImg5 from "../../assets/img/our-menu-10.jpg";
import ExperienceImg6 from "../../assets/img/our-menu-16.jpg";
---

<section id="section-experience" class="bg3-pattern p-t-115 p-b-120">
  <div class="container">
    <div class="t-center m-b-22">
      <h3 class="tit3 t-center m-t-2">Experiencia</h3>
    </div>
    <div class="row">
      <div class="col-md-8">
        <div class="row">
          <div class="col-sm-6">
            <div
              class="item-ourmenu bo-rad-10 hov-img-zoom pos-relative m-t-30"
            >
              <Image
                src={ExperienceImg1}
                alt="IMG-MENU"
                style={{ height: "auto" }}
              />
              <a href="#" class="btn2 flex-c-m txt5 ab-c-m size4"> Lunch</a>
            </div>
          </div>
          <div class="col-sm-6">
            <div
              class="item-ourmenu bo-rad-10 hov-img-zoom pos-relative m-t-30"
            >
              <Image
                src={ExperienceImg2}
                alt="IMG-MENU"
                style={{ height: "auto" }}
              />

              <a href="#" class="btn2 flex-c-m txt5 ab-c-m size5"> Dinner</a>
            </div>
          </div>
          <div class="col-12">
            <div
              class="item-ourmenu bo-rad-10 hov-img-zoom pos-relative m-t-30"
            >
              <Image
                src={ExperienceImg3}
                alt="IMG-MENU"
                style={{ height: "auto" }}
              />

              <a href="#" class="btn2 flex-c-m txt5 ab-c-m size6">
                Happy Hour
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="row">
          <div class="col-12">
            <div
              class="item-ourmenu bo-rad-10 hov-img-zoom pos-relative m-t-30"
            >
              <Image
                src={ExperienceImg4}
                alt="IMG-MENU"
                style={{ height: "auto" }}
              />

              <a href="#" class="btn2 flex-c-m txt5 ab-c-m size7"> Drink</a>
            </div>
          </div>
          <div class="col-12">
            <div
              class="item-ourmenu bo-rad-10 hov-img-zoom pos-relative m-t-30"
            >
              <Image
                src={ExperienceImg5}
                alt="IMG-MENU"
                style={{ height: "auto" }}
              />

              <a href="#" class="btn2 flex-c-m txt5 ab-c-m size8"> Starters</a>
            </div>
          </div>
          <div class="col-12">
            <div
              class="item-ourmenu bo-rad-10 hov-img-zoom pos-relative m-t-30"
            >
              <Image
                src={ExperienceImg6}
                alt="IMG-MENU"
                style={{ height: "auto" }}
              />

              <a href="#" class="btn2 flex-c-m txt5 ab-c-m size9"> Dessert</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
