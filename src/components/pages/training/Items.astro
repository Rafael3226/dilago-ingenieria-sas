---
import ImageZoom from "../../section/ImageZoom.astro";
import Section from "../../section/Section.astro";
import Img from "../../../assets/img/historia.jpg";
import TextList from "../../section/TextList.astro";

const id = "section-items";
const alt = "items";
const items = [
  "Capacitación y calificación en ensayos no destructivos: Inspección visual Nivel II, Ultrasonido medición de espesores, Líquidos penetrantes Nivel II, Partículas Magnéticas nivel II.",
