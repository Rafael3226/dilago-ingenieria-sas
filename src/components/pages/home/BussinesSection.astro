---
import Separator from "../../section/Separator.astro";
import Card from "../../section/Card.astro";
import TrainingImg from "../../../assets/img/training-01.jpg";
import ServicesImg from "../../../assets/img/services-01.jpeg";
import SuppliesImg from "../../../assets/img/supplies-01.jpeg";

const sections = [
  {
    title: "Capacitaciones",
    text: "Contamos con más de 30 programas, ajustados a las necesidades del mercado actual en la industria de hidrocarburos, civil, y metalmecánica.",
    img: TrainingImg,
    alt: "Capacitaciones",
    href: "/training",
  },
  {
    title: "Servicios",
    text: "Ofrecemos una amplia gama de servicios que cumplen con los estándares y códigos de la industria, garantizando la calidad y seguridad de los proyectos.",
    img: ServicesImg,
    alt: "Servicios",
    href: "/services",
  },
  {
    title: "Suministros",
    text: "Ofrecemos una variedad de suministros que incluyen materiales y accesorios mecánicos, así como instrumerntacion y equipo electrónico.",
    img: SuppliesImg,
    alt: "Suministros",
    href: "/supplies",
  },
];

const className = "col-md-4 p-t-30";
---

<section id="section-bussines">
  <Separator>Lineas de Negocio</Separator>
  <div class="content-intro bg-white p-t-77 p-b-70">
    <div class="container">
      <div class="row">
        {
          sections.map((d) => {
            const props = { ...d, className };
            return <Card {...props} />;
          })
        }
      </div>
    </div>
  </div>
</section>
