---
const {
  className = "",
  style = "",
  isTextCenter = true,
  isJustify = true,
} = Astro.props;

let newClass = "";
newClass += className;
newClass += isTextCenter ? " t-center" : "";

let newStyle = "";
newStyle += style;
newStyle += " font-size: 1.2em;";
newStyle += isJustify ? " text-align: justify;" : "";
---

<p class={newClass} style={newStyle}><slot /></p>
