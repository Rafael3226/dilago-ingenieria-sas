---
const { id } = Astro.props;
---

<section id={id}>
  <slot name="separator" />
  <div class="container py-6">
    <slot name="title" />
    <div class="row p-t-50">
      <div class="col-md-6 d-flex align-items-center">
        <slot name="left" />
      </div>
      <div class="col-md-6 d-flex align-items-center">
        <slot name="right" />
      </div>
      <div class="col-md-12 align-items-center">
        <slot name="bottom" />
      </div>
    </div>
  </div>
</section>
